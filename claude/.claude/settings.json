{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"permissions": {
		"allow": [
			"Bash(bun run :*)",
			"Bash(git :*)",
			"Bash(git worktree :*)",
			"Bash(docker :*)",
			"Bash(rg :*)",
			"Bash(ripgrep :*)",
			"Bash(fd :*)",
			"Bash(fzf :*)",
			"Bash(bat :*)",
			"Bash(exa :*)",
			"Bash(eza :*)",
			"Bash(delta :*)",
			"Bash(zoxide :*)",
			"Bash(dust :*)",
			"Bash(htop :*)",
			"Bash(btop :*)",
			"Bash(jq :*)",
			"Bash(yq :*)"
		],
		"deny": [
			"Bash(rm -rf /)",
			"Bash(dd if=/dev/zero of=/dev/:*)",
			"Bash(mkfs.:*)",
			"Bash(> /dev/sda:*)"
		]
	},
	"env": {
		"CLAUDE_CODE_ENABLE_TELEMETRY": "0",
		"EDITOR": "nvim",
		"GIT_EDITOR": "nvim"
	},
	"preferredNotifChannel": "terminal_bell",
	"verbose": true,
	"cleanupPeriodDays": 90,
	"includeCoAuthoredBy": false
}
