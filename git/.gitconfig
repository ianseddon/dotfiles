[init]
  defaultBranch = main

[user]
  email = iseddon@ebsco.com
  name = Ian Seddon

# delta (https://github.com/dandavison/delta)

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = side-by-side line-numbers decorations
  syntax-theme = everforest-dark # this pulls from the bat theme cache
  navigate = true  # use n and N to move between diff sections
  dark = true
  hyperlinks = true

[merge]
  conflictstyle = zdiff3
[pull]
	rebase = true
