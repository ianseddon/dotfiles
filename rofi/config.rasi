configuration {
	font: "Fira Code 11";
	show-icons: true;
	icon-theme: "Papirus";
	hide-scrollbar: true;
	sidebar-mode: false;
}

@theme "nord"

prompt {
	enabled: true;
	padding: 10px;
}

entry {
	expand: true;
	horizontal-align: 0;
	padding: 10px 10px 10px 0;
	blink: true;
}

listview {
	padding: 0px;
	columns: 1;
	lines: 5;
	spacing: 5px;
	cycle: true;
	dynamic: true;
	layout: vertical;
}
